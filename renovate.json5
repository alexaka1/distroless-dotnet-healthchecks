{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "security:openssf-scorecard",
    ":automergePr",
    ":automergePatch",
    ":automergeDigest",
    ":automergeRequireAllStatusChecks",
    ":rebaseStalePrs",
    ":pinDependencies",
  ],
  "baseBranches": [
    "$default",
    "/^beta$/"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "npm",
        "node-version"
      ],
      "addLabels": [
        "javascript"
      ]
    },
    {
      "matchDatasources": [
        "nuget"
      ],
      "addLabels": [
        ".NET"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "addLabels": [
        "docker"
      ]
    },
    {
      "groupName": ".NET Core (Nightly) Docker containers",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "mcr.microsoft.com/dotnet/nightly/**"
      ]
    }
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    //"**/test/**",
    "**/tests/**",
    "**/__fixtures__/**"
  ]
}
